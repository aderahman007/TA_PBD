<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ivory"
    tools:context=".fragment.PenjelasanHukumTajwidFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/Ljudul"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_judul_ttg_tajwid">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/alqalam"
            android:gravity="center"
            android:text="Idzhar"
            android:textColor="@color/pinkquad"
            android:textSize="30dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/Ljudul"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_play"/>
    </ScrollView>

</RelativeLayout>