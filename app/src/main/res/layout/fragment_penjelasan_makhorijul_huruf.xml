<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    tools:context=".fragment.PenjelasanMakhorijulHurufFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/play"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button_play"
            android:paddingRight="50dp"
            android:paddingLeft="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_play"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/alqalam"
                    android:text="Dengarkan Suara"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/custom_card_stroke">
            <TextView
                android:id="@+id/txthurufindo"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:fontFamily="@font/alqalam"
                android:textSize="80dp"
                android:text="Ro"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="160dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_button_play"/>

            <ImageView
                android:id="@+id/txthurufarab"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:src="@drawable/hurufro"/>
        </LinearLayout>

        <ScrollView
            android:layout_below="@+id/Ljudul"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_play"/>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>