                            android:textColor="@color/colorAccent"
                            android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>

